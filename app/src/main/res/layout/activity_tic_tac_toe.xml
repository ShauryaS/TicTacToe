<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shauryas.tictactoe.TicTacToe"
    android:background="#000000">

    <ImageView
        android:src="@drawable/whitetictactoegrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="tictactoegrid"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/button"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:onClick="placeSymbol"
        android:clickable="true"
        android:enabled="true"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:onClick="placeSymbol"
        android:enabled="true"
        android:clickable="true"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/button3"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:onClick="placeSymbol"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:onClick="placeSymbol"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:onClick="placeSymbol"
        android:id="@+id/button5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:onClick="placeSymbol"
        android:id="@+id/button6"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:background="@android:color/transparent"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:onClick="placeSymbol"
        android:id="@+id/button7"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:onClick="placeSymbol"
        android:background="@android:color/transparent"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/button9"
        android:onClick="placeSymbol"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dispWinOrLose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="resetGame"
        android:src="@drawable/reset"
        android:background="@android:color/transparent" />

</RelativeLayout>

